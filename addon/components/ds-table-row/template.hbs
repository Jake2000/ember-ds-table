{{#each columns as |column|}}
    {{#if hasBlock}}
        {{yield (hash
                cell=(component 'ds-table-cell' isVisible=column.isVisible column=column record=(get record column.path))
            )
        }}
    {{else}}
        {{ds-table-cell
            isVisible=column.isVisible
            column=column
            record=(get record column.path)
        }}
    {{/if}}
{{/each}}
