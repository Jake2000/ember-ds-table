{{#if hasBlock}}
    {{yield (hash cell=(component 'ds-table-cell' tagName='th'))}}
{{else}}
    <tr>
        {{#each columns as |column|}}
            {{ds-table-cell
                tagName='th'
                isVisible=column.isVisible
                record=(get column 'title')
            }}
        {{/each}}
    </tr>
{{/if}}
